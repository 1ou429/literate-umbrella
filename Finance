body { font-family: Arial, sans-serif; margin:0; padding:0; background:#f4f4f4; }
header { background:#2c3e50; color:white; padding:10px; text-align:center; }
header .logo img { max-width:100px; display:block; margin:0 auto; }
header .company-info { margin:10px 0; }
nav button { margin:5px; padding:10px; border:none; background:#3498db; color:white; cursor:pointer; }
section { display:none; padding:20px; background:white; margin:20px; border-radius:5px; }
section.active { display:block; }
function showSection(id) {
    document.querySelectorAll('main section').forEach(sec => sec.classList.remove('active'));
    document.getElementById(id).classList.add('active');
}

let clients=[], fournisseurs=[], factures=[], depenses=[];

function addClient(){ 
    let name=document.getElementById('clientName').value; 
    if(name){clients.push(name); updateList('clientList', clients); document.getElementById('clientName').value='';}
}

function addFournisseur(){ 
    let name=document.getElementById('fournisseurName').value; 
    if(name){fournisseurs.push(name); updateList('fournisseurList', fournisseurs); document.getElementById('fournisseurName').value='';}
}

function addFacture(){ 
    let desc=document.getElementById('factureDesc').value; 
    let montant=parseFloat(document.getElementById('factureMontant').value); 
    if(desc && !isNaN(montant)){factures.push({desc,montant}); updateFactures(); document.getElementById('factureDesc').value=''; document.getElementById('factureMontant').value='';}
}

function addDepense(){ 
    let desc=document.getElementById('depenseDesc').value; 
    let montant=parseFloat(document.getElementById('depenseMontant').value); 
    if(desc && !isNaN(montant)){depenses.push({desc,montant}); updateDepenses(); document.getElementById('depenseDesc').value=''; document.getElementById('depenseMontant').value='';}
}

function updateList(id, arr){ 
    let ul=document.getElementById(id); ul.innerHTML=''; arr.forEach(el=>{ let li=document.createElement('li'); li.textContent=el; ul.appendChild(li); }); 
}

function updateFactures(){ 
    let ul=document.getElementById('factureList'); ul.innerHTML=''; let total=0; 
    factures.forEach(f=>{ let li=document.createElement('li'); li.textContent=f.desc+' : '+f.montant+' ‚Ç¨'; ul.appendChild(li); total+=f.montant; }); 
    document.getElementById('totalFactures').textContent=total; 
    updateBenefice();
}

function updateDepenses(){ 
    let ul=document.getElementById('depenseList'); ul.innerHTML=''; let total=0; 
    depenses.forEach(d=>{ let li=document.createElement('li'); li.textContent=d.desc+' : '+d.montant+' ‚Ç¨'; ul.appendChild(li); total+=d.montant; }); 
    document.getElementById('totalDepenses').textContent=total; 
    updateBenefice();
}

function updateBenefice(){ 
    let totalFact=parseFloat(document.getElementById('totalFactures').textContent)||0; 
    let totalDep=parseFloat(document.getElementById('totalDepenses').textContent)||0; 
    document.getElementById('beneficeNet').textContent=(totalFact-totalDep);
}

function resetDonnees(){ 
    if(confirm('Voulez-vous vraiment tout effacer ?')){
        clients=[];fournisseurs=[];factures=[];depenses=[]; 
        updateList('clientList',clients); updateList('fournisseurList',fournisseurs); 
        updateFactures(); updateDepenses();
    }
}
